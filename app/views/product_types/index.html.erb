<p id="notice"><%= notice %></p>

<h1>Product Types</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th class="tab-l">Name</th>
      <th class="tab-r" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_types.each do |product_type| %>
      <tr>
        <td class="tab"><%= product_type.name %></td>
        <td class="tab"><%= link_to 'Show', product_type, class: 'btn btn-sm btn-warning text-light'  %></td>
        <td class="tab"><%= link_to 'Edit', edit_product_type_path(product_type), class: 'btn btn-sm btn-info text-light' %></td>
        <td class="tab"><%= link_to 'Destroy', product_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger text-light' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


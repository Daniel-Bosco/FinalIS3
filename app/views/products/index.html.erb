<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th class="tab-l">Brand</th>
      <th class="tab">Product type</th>
      <th class="tab">Name</th>
      <th class="tab">Price</th>
      <th class="tab">Image</th>
      <th class="tab">Description</th>
      <th class="tab-r" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="tab"><%= product.brand.name %></td>
        <td class="tab"><%= product.product_type.name %></td>
        <td class="tab"><%= product.name %></td>
        <td class="tab"><%= price(product) %></td>
        <td class="tab"><%= show_image(product) %></td>
        <td class="tab"><%= product.description %></td>
        <td class="tab"><%= link_to 'Show', product, class: 'btn btn-sm btn-warning text-light' %></td>
        <td class="tab"><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-info text-light' %></td>
        <td class="tab"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger text-light' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

